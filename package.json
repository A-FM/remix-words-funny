    "postgres": "^3.4.5",
    "react": "^19.0.0",
    "react-activity-calendar": "^2.7.9",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "react-hot-toast": "^2.5.2",
    "react-infinite-scroll-hook": "^5.0.1",
    "react-router": "^7.2.0",
    "superjson": "^2.2.2",
