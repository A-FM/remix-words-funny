    "@react-router/serve": "^7.2.0",
    "@tanstack/react-query": "^5.67.1",
    "@tanstack/react-query-devtools": "^5.67.1",
    "@trpc/client": "^10.45.2",
    "@trpc/server": "^10.45.2",
    "boring-avatars": "^1.11.2",
    "chance": "^1.1.12",
    "cookie": "^1.0.2",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.13",
    "drizzle-orm": "^0.40.0",
